.Project
  margin 2em 0
  margin-left -1em
  margin-right -1em
  width 100%
  display flex
  flex-wrap wrap
  align-items center
  justify-content: center;
  &-item
    display flex
    flex-direction column
    justify-content center
    align-items center
    box-shadow 0 1px 10px rgba(black_primary, .3)
    width 100%
    height 60vw
    position relative
    cursor pointer
    overflow hidden
    border-radius .3em
    margin .5em
    &:hover
      .description
        transform translateY(-44%);
    .title
      margin 0
      font-size 1.5em
      z-index 1
    .description
      transition all 1s
      position absolute
      transform: translateY(100%);
      left 0
      border-radius: .3em
      width 100%
      height 100%
      bottom -47%
      padding 1em
      background green_primary
      color white
      font-size 14px
      z-index 2
      a
        display block
        margin-left 0
        padding .3em
    img
      width 100%
      height 100%
      position absolute
      top 0
      opacity 0.8
      filter: blur(2px)
