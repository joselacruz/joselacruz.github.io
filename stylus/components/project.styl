.Project
  width calc(100% + 2em)
  background rgba(#2E302F, .8)
  display flex
  flex-direction column
  align-items center
  margin 1em 0
  &-container
    margin 2em 0
    margin-left -1em
    margin-right -1em
    width 100%
    display flex
    flex-wrap wrap
    justify-content space-around
  &-item
    background white
    display inline-block
    width 300px
    box-shadow 0 1px 10px rgba(black_primary, .6)
    margin 1em
    cursor pointer
    border-radius .3em
    position relative
    overflow hidden
    &:hover
      .description
        transform translateY(calc(-100% + 33px))
    figure
      margin 0
      img
        display block
        width 100%
        height 250px

    .title
      margin 0
      padding .3em
      font-size 1.3em
      z-index 1
      color gray_primary
    .description
      position absolute
      left 0
      border-radius 0 0 .3em
      width 100%
      height 100%
      padding 1em
      background green_primary
      color white
      font-size 14px
      transform translateY(100%)
      transition transform ease 1s
      a
        display block
        margin-left 0
        padding .3em
