.Contact
  display flex
  flex-direction column
  align-items center
  padding-bottom 100px
  .title
    color black_primary
  form
    display flex
    flex-direction column
    width 100%
    max-width 700px
    div
      display flex
      flex-direction column
      align-items center
      button
        margin-right 0
    input,
    textarea
      padding 1em
      border-radius .3em
      border 2px gray_secundary solid
      width 100%
      margin .5em 0
      outline none
      transition border .4s ease-in
      &:focus
        border-color blue_secundary
        &:valid
          border-color green_primary
        &:invalid
          border-color red_danger
      &:valid
        border-color green_primary

    button
      &:disabled
        cursor not-allowed
        background rgba(#009688, .3)
        border-color rgba(#009688, .3)
