.Footer
  position absolute
  bottom 0
  left 0
  right 0
  background black_primary
  color gray_secundary
  z-index 3
  display flex
  justify-content: center;
  &-wrapper
    max-width 1100px
    width 100%
    display flex
    flex-direction row
    justify-content center
    padding 1em
  &-info
    display flex
    flex-direction row
    align-items center
    a
      color gray_primary
      text-decoration none
    h6
      display none
  .social
    display none
    a
      margin-left .8em
