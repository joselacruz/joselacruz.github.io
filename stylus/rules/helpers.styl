*
  box-sizing: border-box

main
  position relative
  background white
  z-index 2
  display flex
  flex-direction column
  align-items center
  padding 1em

.wrapper
  max-width 1100px
  z-index 2
  position relative
  width 100%
  height 100%

.title
  color white
  text-align center
.slug
  color #ddd
  font-size 1.5em
  text-align: center;

h1,h2,h3,h4,h5,h6
  font-weight: 400
  margin 30px 0 15px

h1
  font-size 3.2em
h2
  font-size 2.6em
h3
  font-size 1.825em
  line-height 1.4
h4
  font-size 1.5em
  font-weight 700
  line-height 1.2em
h5
  font-size 1.25em
  font-weight 400
  line-height 1.4em
  margin-bottom 15px
h6
  font-size 12px
  font-weight: 700
  margin 0

p
  font-size: 16px;
  line-height: 1.4em;
  margin 0 0 10px

textarea
  resize vertical
btn()
  width 130px
  color white
  text-decoration none
  font-size 1em
  padding .8em
  border-radius .3em
  text-align center
  margin .5em
  border 2px green_primary solid
  transition all linear .2s
  box-shadow 0 1px 3px rgba(black_primary, .6)
  &:active
    transform scale(0.8)
.btn-dark
  btn()
  background green_primary
.btn-outline
  btn()
  border-color white

.social
  max-width: 200px
  display flex
  justify-content space-between
.social > a
  font-size 1.5em
  text-decoration none
  color gray_primary
.social > a > i
  transition all ease-out .2s
  &:hover
    &.icon-twitter
      color twitter
    &.icon-linkedin
      color linkedin
    &.icon-instagram
      color instagram
    &.icon-github
      color #000
